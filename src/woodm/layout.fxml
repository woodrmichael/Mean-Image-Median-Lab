<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="woodm.Controller">
   <children>
      <ScrollPane hbarPolicy="ALWAYS" prefHeight="225.0" prefWidth="600.0" vbarPolicy="NEVER">
         <content>
            <HBox fx:id="imageContainer" prefHeight="225.0" prefWidth="600.0" />
         </content>
      </ScrollPane>
      <HBox prefHeight="25.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#inputImages" prefHeight="25.0" prefWidth="85.0" text="Add Image" />
            <Button mnemonicParsing="false" onAction="#calculateMeanMedian" prefHeight="25.0" prefWidth="85.0" text="Mean" />
            <Button mnemonicParsing="false" onAction="#calculateMeanMedian" prefHeight="25.0" prefWidth="85.0" text="Median" />
            <Button mnemonicParsing="false" onAction="#transformColorChange" prefHeight="25.0" prefWidth="85.0" text="Darker" />
            <Button mnemonicParsing="false" onAction="#transformColorChange" prefHeight="25.0" prefWidth="85.0" text="Lighter" />
            <Button mnemonicParsing="false" onAction="#save" prefHeight="25.0" prefWidth="85.0" text="Save as" />
            <Button mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="85.0" text="Clear" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="201.0" prefWidth="552.0">
         <children>
            <ImageView fx:id="finalImageView" fitHeight="300.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <Label fx:id="messageBox" alignment="CENTER" prefHeight="50.0" prefWidth="600.0" />
   </children>
</VBox>
